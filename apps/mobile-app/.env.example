# CheckRight Mobile App Environment Configuration

# API Configuration
API_URL=http://127.0.0.1:8000/api  # Local Laravel API
# API_URL=https://api.checkright.com/api  # Production API

# Mobile Security Configuration
# IMPORTANT: Generate a secure key for production using: openssl rand -hex 32
MOBILE_API_KEY=your-secure-api-key-here

# Example variables (update as needed)
SECRET_KEY=your-secret-key-here
VAR_NUMBER=10
VAR_BOOL=true

# App Configuration
APP_ENV=development
APP_NAME="CheckRight"
SCHEME=checkright

# Expo Configuration
EXPO_ACCOUNT_OWNER=your-expo-username
EAS_PROJECT_ID=your-eas-project-id

# Build Configuration
BUNDLE_ID=com.checkright.development
PACKAGE=com.checkright.development
VERSION=1.0.0

# Feature Flags
ENABLE_BIOMETRIC_AUTH=true
ENABLE_DEVICE_BINDING=true
ENABLE_REQUEST_SIGNING=true

# Development Settings
DEV_CLIENT_ENABLED=true
EXPO_USE_METRO_WORKSPACE_ROOT=1